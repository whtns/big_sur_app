# Web server Dockerfile (production-optimized)
FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies with uv from requirements.txt for speed
RUN pip install --upgrade pip && pip install --upgrade uv
COPY requirements.txt ./
RUN uv pip install --system --no-cache -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p ./logs ./tmp

# Set PYTHONPATH
ENV PYTHONPATH=/app/src
ENV PYTHONUNBUFFERED=1

EXPOSE 8050

HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8050/ || exit 1

# Run Gunicorn
CMD ["python", "-m", "gunicorn", "--pythonpath", "src", "-k", "gthread", "--threads", "4", "-w", "1", "-b", "0.0.0.0:8050", "--access-logfile", "./logs/gunicorn-access.log", "--error-logfile", "./logs/gunicorn-error.log", "--timeout", "300", "index:server"]
